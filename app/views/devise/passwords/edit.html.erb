<%= simple_form_for resource, :url => password_path(resource_name), :method => :put,
  :html => { :class => 'form-horizontal form-signin' },
  :wrapper => :vertical_form do |f| %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.input :password, :autofocus => true, :label => false, :placeholder => 'Новый пароль' %>
  <%= f.input :password_confirmation, :label => false, :placeholder => 'Новый пароль еще раз' %>
  <%= f.submit 'Изменить пароль', :class => 'btn btn-primary btn-block' %>
<% end %>

<%= render "devise/shared/links" %>
