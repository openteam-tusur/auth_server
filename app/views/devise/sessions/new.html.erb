<%= simple_form_for resource, :url => session_path(resource_name),
  :html => { :class => 'form-horizontal form-signin' },
  :wrapper => :vertical_form do |f| %>

  <%= f.input :email, :autofocus => true, :label => false, :placeholder => 'Адрес электронной почты' %>
  <%= f.input :password, :label => false, :placeholder => 'Пароль' %>
  <%= f.submit 'Войти', :class => 'btn btn-primary btn-block' %>
<% end %>

<%= render "devise/shared/providers" %>
